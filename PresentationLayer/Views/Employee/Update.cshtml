@model EmployeeUpdateVM

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">

    <div class="col-md-8">

        <h6 class="mb-3" style="font-family:'Comic Sans MS'; font-size:20px; font-weight:bold; color:indigo;">Employee Update</h6><span class="text-danger" style="text-transform:lowercase">(* required field)</span>

    </div>

</div>
<hr />

<form asp-action="Update" method="post" class="container-fluid py-4" enctype="multipart/form-data" style="font-family:'Comic Sans MS'; text-transform:capitalize; text-align:center">
    <div asp-validation-summary="All" class="text-warning"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        @* <div class="col-lg-6">
        <label asp-for="Photo" class="control-label" style="text-align:start; font-size:16px">Photo <span class="text-danger">*</span></label>
        <input type="file" asp-for="Photo" class="form-control" accept=".jpg,.png,.jpeg" id="photo" />
        </div> *@
        <div class="col-6">
            <label asp-for="Title" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Title <span class="text-danger">*</span></label>
            <input asp-for="Title" class="btn btn-outline-secondary btn-block" style="cursor:text" />
        </div>
        <div class="col-6">
            <label asp-for="FullName" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Full Name <span class="text-danger">*</span></label>
            <input asp-for="FullName" class="btn btn-outline-secondary btn-block" style="cursor:text" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Facebook" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Facebook Link <span class="text-danger">*</span></label>
            <input asp-for="Facebook" class="btn btn-outline-secondary btn-block" style="cursor:text" />
        </div>
        <div class="col-4">
            <label asp-for="Twitter" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Twitter Link <span class="text-danger">*</span></label>
            <input asp-for="Twitter" class="btn btn-outline-secondary  btn-block" style="cursor:text" />
        </div>
        <div class="col-4">
            <label asp-for="Instagram" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Instagram Link <span class="text-danger">*</span></label>
            <input asp-for="Instagram" class="btn btn-outline-secondary  btn-block" style="cursor:text" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <input type="submit" value="Employee Add" class="btn btn-outline-success btn-block" />
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-outline-warning btn-block" title:"Go to Employees">Cancel</a>
        </div>
    </div>
</form>

<script src="~/js/intlTelInput.js"></script>

<script>
    var input = document.querySelector("#phone");
    window.intlTelInput(input, {});
</script>

