@model EmployeeAddVM

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link rel="stylesheet" href="~/css/demo.css">
<link rel="stylesheet" href="~/css/intlTelInput.css">

<div class="row">

    <div class="col-md-8">

        <h6 class="mb-3" style="font-family:'Comic Sans MS'; font-size:20px">Employee Add</h6><span class="text-danger" style="text-transform:lowercase">(* required field)</span>

    </div>

</div>
<hr />

<form asp-action="Add" method="post" class="container-fluid py-4" style="font-family:'Comic Sans MS'; text-transform:capitalize; text-align:center">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-6">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Facebook" class="control-label"></label>
            <input asp-for="Facebook" class="form-control" />
            <span asp-validation-for="Facebook" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Twitter" class="control-label"></label>
            <input asp-for="Twitter" class="form-control" />
            <span asp-validation-for="Twitter" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Instagram" class="control-label"></label>
            <input asp-for="Instagram" class="form-control" />
            <span asp-validation-for="Instagram" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12">
            <label asp-for="Instagram" class="control-label"></label>
            <input asp-for="Instagram" class="form-control" />
            <span asp-validation-for="Instagram" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12">
            <input type="submit" value="Create" class="btn btn-primary form-control" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

