@model IEnumerable<BookingListVM>

@{
    ViewData["Title"] = "Bookings";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-hover zero-configuration col-12" style="font-family:'Comic Sans MS';">
    <br />
    <br />
    <br />
    <h2 class="text-center" style="color:skyblue; font-family:'Comic Sans MS'; font-size:30px;">Bookings</h2>
    <br />
    <thead>
        <tr>
            <th>Id</th>
            <th class="text-center">Name Surname</th>
            <th class="text-center">Room</th>
            <th class="text-center">Check In</th>
            <th class="text-center">Check Out</th>
            <th class="text-center">Status</th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Id</td>
                <td class="text-center">@booking.FullName</td>
                <td class="text-center">@booking.RoomType</td>
                <td class="text-center">@booking.ChechIn.ToShortDateString()</td>
                <td class="text-center">@booking.ChechOut.ToShortDateString()</td>
                <td class="text-center">@booking.Status</td>
                @if (booking.Status == Status.Pending)
                {
                    <td>
                        <p class="row justify-content-center">
                            <a href="~/AdminBooking/Reject/@booking.Id" class="btn btn-rounded btn-outline-danger col-6" title="Reject">Reject</a>
                            @* <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-rounded btn-outline-danger col-4" title="Delete">Delete</a> *@
                            <a href="~/AdminBooking/Confirm/@booking.Id" class="btn btn-rounded btn-outline-success col-6" title="Confirm">Confirm</a>
                            @* <a asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-rounded btn-outline-success col-4" title="@employee.FullName informations">Details</a> *@
                        </p>
                    </td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    </tbody>
</table>
<hr />