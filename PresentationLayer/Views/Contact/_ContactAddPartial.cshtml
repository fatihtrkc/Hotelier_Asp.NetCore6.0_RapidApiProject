@model ContactAddVM

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Contact Us</h6>
            <h1 class="mb-5"><span class="text-primary text-uppercase">Contact</span> For Any Questions</h1>
        </div>
        <div class="row g-4">
            <div class="col-12">
                <div class="row gy-4">
                    <div class="col-6 col-md-4 col-lg-4">
                        <h6 class="section-title text-start text-primary text-uppercase">Booking</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>book@hotelierrapidapi.com</p>
                    </div>
                    <div class="col-6 col-md-4 col-lg-4">
                        <h6 class="section-title text-start text-primary text-uppercase">General</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>info@hotelierrapidapi.com</p>
                    </div>
                    <div class="col-6 col-md-4 col-lg-4">
                        <h6 class="section-title text-start text-primary text-uppercase">Job Application</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>tech@hotelierrapidapi.com</p>
                    </div>
                    <div class="col-3 col-md-0 col-lg-0"></div>
                </div>
            </div>
            <div class="col-md-6 wow fadeIn" data-wow-delay="0.1s">
                <iframe class="position-relative rounded w-100 h-100"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3008.7733148698853!2d29.008080375691264!3d41.05208607134437!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab7afd662296b%3A0x838c088492dac437!2zWcSxbGTEsXogVGVrbmlrIMOcbml2ZXJzaXRlc2k!5e0!3m2!1str!2str!4v1706851218090!5m2!1str!2str"
                        frameborder="0" style="min-height: 350px; border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0"></iframe>
            </div>
            <div class="col-md-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form asp-action="_ContactAddPartial" asp-controller="Contact" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter your full name" required>
                                    <label asp-for="Name" class="text-center text-capitalize">Name Surname <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter your email"required>
                                    <label asp-for="Email" class="text-center text-capitalize">Email <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Subject" type="text" class="form-control" id="subject" placeholder="Subject" required>
                                    <label asp-for="Subject" class="text-center text-capitalize">Subject <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Message" class="form-control" placeholder="Leave a message here" id="message" style="height: 150px" required></textarea>
                                    <label asp-for="Message" class="text-center text-capitalize">Message <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-rounded btn-primary w-100 py-3 text-capitalize" type="submit">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>