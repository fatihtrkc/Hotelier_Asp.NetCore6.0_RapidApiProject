@model SubscribeAddVM

<form asp-action="_SubscribePartial" asp-controller="Home" method="post">
    <div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s" style="font-family:'Comic Sans MS'">
        <div class="row justify-content-center">
            <div class="col-lg-10 border rounded p-1">
                <div class="border rounded text-center p-1">
                    <div class="bg-white rounded text-center p-5">
                        <h4 class="mb-4" style="font-family:'Comic Sans MS'">Subscribe Our <span class="text-primary text-capitalize">Newsletter</span></h4>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input asp-for="@Model.Email" class="form-control w-100 py-3 ps-4 pe-5" type="email" placeholder="Enter your email" />
                            <button type="submit" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2 text-capitalize">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>