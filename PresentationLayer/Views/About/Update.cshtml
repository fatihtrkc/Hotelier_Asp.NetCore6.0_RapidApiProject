<div class="row">

    <div class="col-md-8">

        <h6 class="mb-3" style="font-family:'Comic Sans MS'; font-size:20px; font-weight:bold; color:indigo;">About Update</h6><span class="text-danger" style="text-transform:lowercase; font-family:'Comic Sans MS'">(* required field)</span>

    </div>

</div>
<hr />

<form asp-action="Update" method="post" class="container-fluid py-4" enctype="multipart/form-data" style="font-family:'Comic Sans MS'; text-transform:capitalize; text-align:center">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        @* <div class="col-lg-6">
        <label asp-for="Photo" class="control-label" style="text-align:start; font-size:16px">Photo <span class="text-danger">*</span></label>
        <input type="file" asp-for="Photo" class="form-control" accept=".jpg,.png,.jpeg" id="photo" />
        </div> *@
        <div class="col-6">
            <label asp-for="Title" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Title <span class="text-danger">*</span></label>
            <input asp-for="Title" class="btn btn-outline-secondary btn-block" style="cursor:text" required />
        </div>
        <div class="col-6">
            <label asp-for="Content" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Content <span class="text-danger">*</span></label>
            <input asp-for="Content" class="btn btn-outline-secondary btn-block" style="cursor:text" required />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="RoomCount" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Room Count <span class="text-danger">*</span></label>
            <input asp-for="RoomCount" class="btn btn-outline-secondary btn-block" style="cursor:text" type="number" min="0" required />
        </div>
        <div class="col-4">
            <label asp-for="EmployeeCount" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Employee Count <span class="text-danger">*</span></label>
            <input asp-for="EmployeeCount" class="btn btn-outline-secondary  btn-block" style="cursor:text" type="number" min="0" required />
        </div>
        <div class="col-4">
            <label asp-for="CustomerCount" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Customer Count <span class="text-danger">*</span></label>
            <input asp-for="CustomerCount" class="btn btn-outline-secondary  btn-block" style="cursor:text" type="number" min="0" required />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <input type="submit" value="About Update" class="btn btn-outline-success btn-block" />
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-outline-warning btn-block" title:"Go to Abouts">Cancel</a>
        </div>
    </div>
</form>

<script src="~/js/intlTelInput.js"></script>

<script>
    var input = document.querySelector("#phone");
    window.intlTelInput(input, {});
</script>

