<div class="container-fluid p-0 mb-5">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/hotelier-1.0.0/img/carousel-1.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 700px;">
                        <h6 class="section-title text-white text-uppercase mb-3 animated slideInDown" style="font-family:'Comic Sans MS'">Luxury Living</h6>
                        <h1 class="display-3 text-white mb-4 animated slideInDown">Discover A Brand Luxurious Hotel</h1>
                        <a asp-action="Index" asp-controller="Room" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft text-capitalize" style="font-family:'Comic Sans MS'">Our Rooms</a>
                        <a asp-action="Index" asp-controller="Booking" class="btn btn-light py-md-3 px-md-5 animated slideInRight text-capitalize" style="font-family:'Comic Sans MS'">Book A Room</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/hotelier-1.0.0/img/carousel-2.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 700px;">
                        <h6 class="section-title text-white text-uppercase mb-3 animated slideInDown" style="font-family:'Comic Sans MS'">Luxury Living</h6>
                        <h1 class="display-3 text-white mb-4 animated slideInDown">Discover A Brand Luxurious Hotel</h1>
                        <a asp-action="Index" asp-controller="Room" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft text-capitalize" style="font-family:'Comic Sans MS'">Our Rooms</a>
                        <a asp-action="Index" asp-controller="Booking" class="btn btn-light py-md-3 px-md-5 animated slideInRight text-capitalize" style="font-family:'Comic Sans MS'">Book A Room</a>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" title="Previous"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" title="Next"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>