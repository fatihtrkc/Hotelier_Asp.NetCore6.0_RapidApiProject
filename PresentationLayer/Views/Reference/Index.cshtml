@model IEnumerable<ReferenceListVM>

@{
    ViewData["Title"] = "References";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-hover zero-configuration col-12" style="font-family:'Comic Sans MS';">
    <br />
    <br />
    <br />
    <h2 class="text-center" style="color:skyblue; font-family:'Comic Sans MS'; font-size:30px;">References</h2>
    <br />
    <thead>
        <tr>
            <th>Id</th>
            <th class="text-center">Title</th>
            <th class="text-center">Name Surname</th>
            <th class="text-center">Date</th>
            @* <th class="text-center">Processes</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var reference in Model)
        {
            <tr>
                <td>@reference.Id</td>
                <td class="text-center">@reference.Title</td>
                <td class="text-center">@reference.FullName</td>
                <td class="text-center">@reference.CreationDate.ToShortDateString()</td>
                <td>
                    <p class="row justify-content-center">
                        <a href="~/Reference/Delete/@reference.Id" class="btn btn-rounded btn-outline-danger col-4" title="Delete">Delete</a>
                        @* <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-rounded btn-outline-danger col-4" title="Delete">Delete</a> *@
                        <a href="~/Reference/Update/@reference.Id" class="btn btn-rounded btn-outline-warning col-4" title="@reference.FullName informations update">Update</a>
                        @* <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-rounded btn-outline-warning col-4" title="@employee.FullName informations update">Update</a> *@
                        <a href="~/Reference/Detail/@reference.Id" class="btn btn-rounded btn-outline-success col-4" title="@reference.FullName informations">Details</a>
                        @* <a asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-rounded btn-outline-success col-4" title="@employee.FullName informations">Details</a> *@
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<p class="btn-rounded text-center" style="background-color:skyblue;"><a asp-action="Add" class="btn btn-rounded btn-outline-primary form-control col-12" style="font-family:'Comic Sans MS'; font-size:20px; color:white" title="Add new employee">Employee Add</a></p>