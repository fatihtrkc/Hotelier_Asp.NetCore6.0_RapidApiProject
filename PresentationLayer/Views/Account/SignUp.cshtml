</head>

<body class="" style="font-family:'Comic Sans MS', sans-serif">
    <div class="container position-sticky z-index-sticky top-0">
        <div class="row">
            <div class="col-12">
                <!-- Navbar -->
                <nav class="navbar navbar-expand-lg blur blur-rounded top-0 z-index-3 shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
                    <div class="container-fluid pe-0">
                        <a asp-action="Index" asp-controller="Home" class="navbar-brand font-weight-bolder ms-lg-0 ms-3 text-warning btn-outline-danger">
                            Hotelier Rapid Api
                        </a>
                        <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon mt-2">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </span>
                        </button>
                        <div class="collapse navbar-collapse" id="navigation">
                            <ul class="navbar-nav mx-auto ms-xl-auto me-xl-7 me-lg-7">
                                <li class="nav-item text-center">
                                    <a asp-action="SignIn" class="nav-link me-2">
                                        <i class="fas fa-user-circle opacity-6 text-dark me-1"></i>
                                        Sign In
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <!-- End Navbar -->
            </div>
        </div>
    </div>

    <!-- Main -->
    <main class="main-content mt-0">
        <section>
            <div class="min-vh-50">
                <div class="page-header align-items-start min-vh-50 pt-4 pb-11 m-2 border-radius-lg">
                    <span class="mask bg-gradient-warning opacity-7"><img src="~/img/aerial-shot-aria-hotel-las-vegas.jpg" style="width:100%; height:435px" /></span>
                </div>
                <div class="container mt-6">
                    <div class="row mt-lg-n10 mt-md-n11 mt-n10">
                        <div class="col-xl-8 col-lg-8 col-md-8 col-12 d-flex flex-column mx-auto">
                            <div class="card z-index-0">
                                <br />
                                <div class="card-header pb-2 text-center bg-transparent">
                                    <h3 class="font-weight-bolder text-warning text-gradient">Welcome !</h3>
                                </div>
                                <div class="card-body" style="font-family:'Comic Sans MS'">
                                    <form method="post">
                                        <div class="d-grid">
                                            <div class="row">
                                                <div class="col-12 col-xl-6 col-lg-6">
                                                    <div class="mb-3" style="text-align:center">
                                                        <label asp-for="Name">Name <span class="text-danger">*</span></label>
                                                        <input type="text" asp-for="Name" class="form-control" placeholder="Enter your name" required>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-xl-6 col-lg-6">
                                                    <div class="mb-3" style="text-align:center">
                                                        <label asp-for="Surname">Surname <span class="text-danger">*</span></label>
                                                        <input type="text" asp-for="Surname" class="form-control" placeholder="Enter your surname" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-grid">
                                            <div class="row">
                                                <div class="col-12 col-xl-6 col-lg-6">
                                                    <div class="mb-3" style="text-align:center">
                                                        <label asp-for="Username">Username <span class="text-danger">*</span></label>
                                                        <input type="text" asp-for="Username" class="form-control" placeholder="Enter your username" required>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-xl-6 col-lg-6">
                                                    <div class="mb-3" style="text-align:center">
                                                        <label asp-for="Email">Email <span class="text-danger">*</span></label>
                                                        <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-grid">
                                            <div class="row">
                                                <div class="col-12 col-xl-6 col-lg-6">
                                                    <div class="mb-3" style="text-align:center">
                                                        <label asp-for="Password">Password <span class="text-danger">*</span></label>
                                                        <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" aria-label="Password" required>
                                                        <a href="#" class="form-icon-right password-show-hide btn-danger" title="Hide or show password">
                                                            <i class="mdi mdi-eye"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-xl-6 col-lg-6">
                                                    <div class="mb-3" style="text-align:center">
                                                        <label asp-for="ConfirmPassword">Password Confirm <span class="text-danger">*</span></label>
                                                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Enter your re-password" required>
                                                        <a href="#" class="form-icon-right password-show-hide btn-danger" title="Hide or show password">
                                                            <i class="mdi mdi-eye"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-grid">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="mb-3" style="text-align:center">
                                                        <label asp-for="Address">Address <span class="text-danger">*</span></label>
                                                        <input type="text" asp-for="Address" class="form-control" placeholder="Enter your address" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-check form-check-info text-left">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked required>
                                            <label class="form-check-label" for="flexCheckDefault">
                                                I agree the <a href="javascript:;" class="text-dark font-weight-bolder">Terms and Conditions <span class="text-danger">*</span></a>
                                            </label>
                                        </div>
                                        <div class="text-danger" asp-validation-summary="All" style="font-size:17px"></div>
                                        <div class="text-center">
                                            <button type="submit" class="btn bg-gradient-dark w-100 my-3 mb-2" style="text-transform:capitalize; font-weight:100; font-size:16px">Sign Up</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- End Main -->

    <!-- -------- START FOOTER 3 w/ COMPANY DESCRIPTION WITH LINKS & SOCIAL ICONS & COPYRIGHT ------- -->
    <footer class="footer py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center mb-4 mt-1">
                    <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                        <span class="text-lg fab fa-dribbble"></span>
                    </a>
                    <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                        <span class="text-lg fab fa-twitter"></span>
                    </a>
                    <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                        <span class="text-lg fab fa-instagram"></span>
                    </a>
                    <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                        <span class="text-lg fab fa-pinterest"></span>
                    </a>
                    <a href="javascript:;" target="_blank" class="text-secondary me-xl-4 me-4">
                        <span class="text-lg fab fa-github"></span>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mx-auto text-center mt-1">
                    <p class="mb-0 text-secondary">
                        Copyright © <script>
                                        document.write(new Date().getFullYear())
                        </script> Soft by Creative Tim.
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- -------- END FOOTER 3 w/ COMPANY DESCRIPTION WITH LINKS & SOCIAL ICONS & COPYRIGHT ------- -->
</body>

