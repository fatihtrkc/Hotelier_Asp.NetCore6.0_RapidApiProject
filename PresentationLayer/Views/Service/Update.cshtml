@model ServiceUpdateVM

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">

    <div class="col-md-8">

        <h6 class="mb-3" style="font-family:'Comic Sans MS'; font-size:20px; font-weight:bold; color:indigo;">Service Update</h6><span class="text-danger" style="text-transform:lowercase">(* required field)</span>

    </div>

</div>
<hr />

<form method="post" class="container-fluid py-4" enctype="multipart/form-data" style="font-family:'Comic Sans MS'; text-transform:capitalize; text-align:center;">
    <div asp-validation-summary="All" class="text-warning"></div>
    <input asp-for="Name" type="hidden" />
    <div class="form-group row">
        @* <div class="col-lg-6">
        <label asp-for="Photo" class="control-label" style="text-align:start; font-size:16px">Photo <span class="text-danger">*</span></label>
        <input type="file" asp-for="Photo" class="form-control" accept=".jpg,.png,.jpeg" id="photo" />
        </div> *@
        <div class="col-6">
            <label asp-for="Icon" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Icon <span class="text-danger">*</span></label>
            <input asp-for="Icon" class="btn btn-outline-secondary btn-block" style="cursor:text" />
        </div>
        <div class="col-6">
            <label asp-for="Description" class="control-label" style="text-align:start; font-size:16px; font-weight:bold; color:indigo;">Description <span class="text-danger">*</span></label>
            <input asp-for="Description" class="btn btn-outline-secondary btn-block" style="cursor:text" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <input type="submit" value="Service Update" class="btn btn-outline-success btn-block" />
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-outline-warning btn-block" title:"Go to Service">Cancel</a>
        </div>
    </div>
</form>

<script src="~/js/intlTelInput.js"></script>

<script>
    var input = document.querySelector("#phone");
    window.intlTelInput(input, {});
</script>

